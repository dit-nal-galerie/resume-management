{
  "name": "resume/api",
  "description": "Slim 4 backend for resume management",
  "type": "project",
  "require": {
    "slim/slim": "^4.0",
    "slim/psr7": "^1.3",
    "firebase/php-jwt": "^6.11",
    "vlucas/phpdotenv": "^5.6",
    "phpmailer/phpmailer": "^6.8"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "friendsofphp/php-cs-fixer": "^3.86"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "config": {
    "allow-plugins": {
      "tuupola/cors-middleware": true
    }
  }
}
