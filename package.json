{
  "name": "resume-management-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for the Resume Management application, containing both frontend and backend services.",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "start:frontend": "npm run start --workspace=frontend",
    "start:backend": "npm run start --workspace=backend",
    "start:all": "concurrently \"npm run start --workspace=frontend\" \"npm run start --workspace=backend\"",
    "build:all": "npm run build --workspace=frontend && npm run build --workspace=backend",
    "test:all": "npm test --workspace=frontend && npm test --workspace=backend",
    "install:all": "npm install",
    "format": "npm run format:frontend && npm run format:backend && npm run format:php",
    "format:frontend": "prettier --write \"frontend/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:backend": "prettier --write \"backend/**/*.{js,ts,json,md}\"",
    "format:php": "prettier --plugin=@prettier/plugin-php --parser=php --write \"backend-php/**/*.php\"",
    "check:php": "prettier --plugin=@prettier/plugin-php --parser=php --check \"backend-php/**/*.php\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:frontend": "eslint frontend --fix",
    "lint:backend": "eslint backend --fix",
    "lint:php": "php ./backend-php/vendor/bin/php-cs-fixer fix backend-php --dry-run --diff"
  },
  "devDependencies": {
    "@prettier/plugin-php": "^0.24.0",
    "@types/cookie-parser": "^1.4.9",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "prettier": "^3.6.2",
    "prettier-plugin-curly": "^0.3.2",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "typescript-eslint": "^8"
  },
  "keywords": [
    "monorepo",
    "resume",
    "management",
    "react",
    "node",
    "express"
  ],
  "author": "Ihr Name oder Team",
  "license": "ISC",
  "dependencies": {
    "cookie-parser": "^1.4.7"
  }
}
