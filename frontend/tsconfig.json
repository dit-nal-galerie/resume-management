{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    "baseUrl": "src", 
    "paths": {
      "@interfaces/*": ["../../interfaces/*"] 
    }
  },
  "include": [
    "src",
    "../../interfaces/**/*.ts" // Behalten Sie dies, damit TypeScript die Dateien zur Typpr√ºfung findet
  ]
}